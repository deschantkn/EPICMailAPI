{
  "name": "epicmailapi",
  "version": "1.0.0",
  "description": "The Backbone of plain and simple communication",
  "main": "index.js",
  "scripts": {
    "test": "./node_modules/.bin/mocha --recursive ./tests/*.js --exit --require @babel/register",
    "start": "nodemon --exec babel-node server/index.js",
    "build": "babel server --out-dir dist && mkdir -p ./dist/docs && npm run docs",
    "serve": "node dist/index.js",
    "lint": "eslint ./server",
    "debug": "node --inspect-brk ./dist/index.js",
    "cover": "nyc npm test && nyc report --reporter=text-lcov | coveralls",
    "docs": "aglio -i server/docs/index.md -o dist/docs/index.html"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/deschant/EPICMailAPI.git"
  },
  "keywords": [
    "REST",
    "API",
    "Express",
    "Nodejs"
  ],
  "author": "Kounou Deschant",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/deschant/EPICMailAPI/issues"
  },
  "homepage": "https://github.com/deschant/EPICMailAPI#readme",
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.3.4",
    "@babel/node": "^7.2.2",
    "@babel/plugin-transform-regenerator": "^7.3.4",
    "@babel/preset-env": "^7.3.4",
    "@babel/register": "^7.0.0",
    "aglio": "^2.3.0",
    "babel-plugin-istanbul": "^5.1.1",
    "chai": "^4.2.0",
    "chai-http": "^4.2.1",
    "coveralls": "^3.0.3",
    "eslint": "^4.19.1",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.14.0",
    "istanbul": "^0.4.5",
    "mocha": "^6.0.2",
    "mocha-lcov-reporter": "^1.3.0",
    "nodemon": "^1.18.10",
    "nyc": "^13.3.0"
  },
  "dependencies": {
    "@babel/polyfill": "^7.2.5",
    "async": "^2.6.2",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.18.3",
    "cors": "^2.8.5",
    "dotenv": "^6.2.0",
    "express": "^4.16.4",
    "joi": "^14.3.1",
    "jsonwebtoken": "^9.0.0",
    "lodash": "^4.17.11",
    "morgan": "^1.9.1",
    "pg": "^7.8.2",
    "rimraf": "^2.6.3"
  },
  "nyc": {
    "require": [
      "@babel/register"
    ],
    "sourceMap": false,
    "instrument": false
  },
  "heroku-run-build-script": true
}
